# grid
cell = triangle
element = FiniteElement("Lagrange", cell, 1)

v = TestFunction(element)

# solutions
u = TrialFunction(element)
u0 = Coefficient(element)

# heat equation constants and timestep
alpha = Constant(cell)
gamma = Constant(cell)
dt = Constant(cell)
f = Coefficient(element)

eq = alpha*u*v*dx - alpha*u0*v*dx + gamma*dt*dot(grad(u), grad(v))*dx - gamma*dt*f*v*ds
a = lhs(eq)
L = rhs(eq)
